{
  "paper_mode": true,
  "market_list": [
    "BTC/USDT",
    "ETH/USDT"
  ],
  "timeframe": "15m",
  "timeframe_minutes": 15,
  "execution_interval": 5,
  

  "ml_long_threshold": 0.7,
  "ml_short_threshold": 0.3,
  "missing_threshold": 0.1,
  
  "ratchet_thresholds": [2, 4, 6],
  "ratchet_lock_ins": [1, 2, 3],
  "kelly_scaling": 0.5,
  "kelly_max_fraction": 0.7,
  "min_position_size": 0.01,
  "emergency_stop_pct": -3,
  "max_hold_hours": 8,
  

  "fee_rate": 0.001,
  "slippage_rate": 0.002,
  
  "ga_settings": {
    "population_size": 100,        
    "mutation_rate": 0.2,         
    "crossover_rate": 0.8,         
    "buy_conditions_count": 3,
    "sell_conditions_count": 3,
    "min_fitness": 0.05,          
    "chunk_size": 10000,
    "trailing_distance": 50.0,
    "max_exposure_ratio": 0.9,
    "allow_shorts": false
  },
  

  "auto_new_trades": true,
  "exchanges": [
    "kucoin",
    "bybit"
  ],
  "exchange_settings": {
    "timeout": 30000,
    "enableRateLimit": true
  },
  

  "database": {
    "type": "sqlite",
    "path": "data/candles.db"
  },
  

  "min_trade_sizes": {
    "BTC/USDT": {
      "min_notional": 2,
      "min_qty": 0.0001
    },
    "ETH/USDT": {
      "min_notional": 2,
      "min_qty": 0.001
    }
  },
  

  "indicators": {
    "ema_periods": [8, 21, 55, 233],
    "rsi_period": 14,
    "macd_fast": 12,
    "macd_slow": 26,
    "macd_signal": 9,
    "atr_period": 14,
    "bb_length": 20,
    "bb_std": 2
  },
  
  "model_paths": {
    "rf_model": "models/trained_rf.pkl",
    "trained_columns": "models/trained_columns.json"
  },
  
  "log_settings": {
    "level": "INFO",
    "output": "logs/trading_bot.log"
  },
  
  "retry_settings": {
    "max_retries": 5,
    "delay": 2}
  
}